{% extends 'base.html.twig' %}

{% block title %}Soin index{% endblock %}

{% block body %}
    <h1>Prestation</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Prix</th>
                <th>DuréeTraitement</th>
                <th>Durée Hospitalisation</th>
                <th>Détails</th>
            </tr>
        </thead>
        <tbody>
        {% for soin in soins %}
            <tr>
                <td>{{ soin.id }}</td>
                <td>{{ soin.nom }}</td>
                <td>{{ soin.prix }}</td>
                <td>{{ soin.duréeTraitement }}</td>
                <td>{{ soin.dureeHospitalisation }}</td>
                <td>
                    <a href="{{ path('soin_show', {'id': soin.id}) }}">show</a>

                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('soin_new') }}">Create new</a>
{% endblock %}
